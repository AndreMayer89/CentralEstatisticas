<div class="row">
    <form>
        <input type="hidden" data-hidden-id-sistema/>
        <div class="form-group">
            <label>Empresa</label>
            <input class="form-control" type="text" data-filtro-empresa />
        </div>
        <div class="form-group">
            <label>Área</label>
            <input class="form-control" type="text" data-filtro-area />
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" data-filtro-area />
        </div>
        <div class="form-group">
            <label>Responsável</label>
            <select class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Ativo?</label>
            <input class="form-control" type="checkbox"/>
        </div>
        <div class="">
            <button class="btn btn-success" type="button" data-salvar>Salvar</button>
            <button class="btn btn-default" type="button" data-voltar>Voltar</button>
        </div>
    </form>
</div>
@section scripts {
    @Scripts.Render("~/bundles/scriptsCadastroSistema")
    <script type="text/javascript">
        var urlSalvar = '@Url.Action("Salvar", "Sistema")';
        var urlLista = '@Url.Action("Index", "Sistema")';
    </script>
}