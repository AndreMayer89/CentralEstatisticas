<div class="row">
    <form>
        <div class="form-group col-md-4">
            <label>Empresa</label>
            <input class="form-control" type="text" data-filtro-empresa />
        </div>
        <div class="form-group col-md-4">
            <label>Área</label>
            <input class="form-control" type="text" data-filtro-area />
        </div>
        <div class="col-md-4">
            <button class="btn btn-default" type="button" data-filtrar>Filtrar</button>
            <button class="btn btn-info" type="button" data-novo>Novo</button>
        </div>
    </form>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Empresa</th>
                <th>Área</th>
                <th>Nome</th>
                <th>Responsável</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            <tr class="template hide">
                <td data-coluna-empresa></td>
                <td data-coluna-area></td>
                <td data-coluna-nome></td>
                <td data-coluna-responsavel></td>
                <td data-coluna-editar><button data-editar data-id-sistema="" type="button" class="btn btn-info">Editar</button></td>
            </tr>
        </tbody>
    </table>
</div>
@section scripts {
    @Scripts.Render("~/bundles/scriptsListaSistema")
    <script type="text/javascript">
        var urlListar = '@Url.Action("Listar", "Sistema")';
        var urlCadastro = '@Url.Action("Cadastro", "Sistema")';
    </script>
}